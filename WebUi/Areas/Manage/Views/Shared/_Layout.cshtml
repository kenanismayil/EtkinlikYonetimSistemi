
@{
    Layout = null;
    var toast = TempData["Toast"];
    var toastError = TempData["ToastError"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Etkinlik Yonetim Sistemi" name="description" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/theme.min.css" rel="stylesheet" type="text/css" />
    @RenderSection("Style", required: false)
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-toast-plugin/jquery.toast.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/Style.css">

</head>
<body>
    <!-- Begin page -->
    <div id="layout-wrapper">
        <div class="header-border"></div>
        <header id="page-topbar">
            <div class="navbar-header">

                <div class="d-flex align-items-left">
                    <button type="button" class="btn btn-sm mr-2 d-lg-none px-3 font-size-16 header-item waves-effect"
                            id="vertical-menu-btn">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>
                </div>

                <div class="d-flex align-items-center">

                    <div class="dropdown d-inline-block ml-2">
                        <button type="button" class="btn header-item waves-effect"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           
                            <span class="d-none d-sm-inline-block ml-1">Yonetim</span>
                        </button>
                    </div>

                </div>
            </div>
        </header>

        <!-- ========== Left Sidebar Start ========== -->
        <div class="vertical-menu">

            <div data-simplebar class="h-100">

                <div class="navbar-brand-box">
                    <a asp-action="index" asp-controller="dashboard" class="logo" style="line-height:0">
                        <img src="~/uploads/no-avatar.png" height="90" width="200" style="object-fit:contain" />
                        <span>
                            Etkinlik Yonetim Sistemi
                        </span>
                    </a>
                </div>

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <!-- Left Menu Start -->
                    <ul class="metismenu list-unstyled" id="side-menu">
                        <li class="menu-title">main pages</li>

                        <li>
                            <a asp-controller="dashboard" asp-action="index" class="waves-effect">
                                <i class="mdi mdi-home-analytics text-success"></i><span>Dashboard</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="countries" asp-action="index" class="waves-effect">
                                <i class="fas fa-luggage-cart text-success"></i>
                                <span>Countries</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="activities" asp-action="index" class="waves-effect">
                                <i class="fa-solid fa-bong text-success"></i>
                                <span>Actvities</span>
                            </a>

                        </li>

                    </ul>
                </div>
                <!-- Sidebar -->
            </div>
        </div>
        <!-- Left Sidebar End -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            @DateTime.Now.ToString("MMMM dd, yyyy") © Etkinlik Yonetim Sistemi
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <div class="menu-overlay"></div>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-toast-plugin/jquery.toast.min.js"></script>
    <script src="~/assets/js/metismenu.min.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/simplebar.min.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="~/assets/js/main.js"></script>
    @RenderSection("scripts", false)

    @if (toast != null)
    {
        <script>
            $.toast({
                heading: 'Success',
                text: "@toast",
                showHideTransition: 'slide',
                icon: 'success'
            });
        </script>
        toast = null;
    }
    @if (toastError != null)
    {
        <script>
            $.toast({
                heading: 'Error',
                text: "@toastError",
                showHideTransition: 'slide',
                icon: 'error'
            });
        </script>
        toastError = null;
    }
</body>
</html>
