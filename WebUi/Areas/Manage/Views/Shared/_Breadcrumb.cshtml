@model string
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">@(Model != null ? Model : "Home Page")</h4>

            @if (Model != null)
            {
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a asp-action="index" asp-controller="dashboard">Home Page</a></li>
                        <li class="breadcrumb-item active">@Model</li>
                    </ol>
                </div>
            }
        </div>
    </div>
</div>

<hr />