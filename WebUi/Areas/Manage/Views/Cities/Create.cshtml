@model City

@{
    ViewData["Title"] = "New city";
    string breadcrunb = ViewBag.Breadcrumb as string;
}

@await Html.PartialAsync("_Breadcrumb", model: breadcrunb)
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" placeholder="enter" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryId">
                </label>
                <select asp-for="CountryId"
                        asp-items="@ViewBag.CountryId"
                        class="form-control"></select>
                <input hidden name="CountryId" value="@Model.CountryId">
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-success" />
                </div>
           </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-success">Back</a>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

